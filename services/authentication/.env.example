# Django core
SECRET_KEY=super-secret-key
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,auth.local

# Database
DATABASE_NAME=authentication
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_HOST=localhost
